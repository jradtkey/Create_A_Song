    <h1 class="text-center" style="font-size: 7vw">Choose your drum track</h1>
    <div style="background-image: url('images/drums.jpg'); background-size:cover; height: 900px">
        <div class="coverflow">
            <div class="cover"><button class="btn btn-primary" id="button0" style="background-image: url('images/drums1.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button1" style="background-image: url('images/drums2.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button2" style="background-image: url('images/drums3.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button3" style="background-image: url('images/drums4.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button4" style="background-image: url('images/drums5.png');"></button></div>
        </div>

        <div class="row align-items-center justify-content-center">
          <div class="btn-group" id="select0" role="group" aria-label="Basic example">
            <button type="button" id="play0" class="btn btn-secondary"><div style="font-size:2em;"><i class="fas fa-play-circle"></i>/<i class="fas fa-pause-circle"></i></div></button>
          </div>
          <div class="btn-group" id="select1" style="display:none;" role="group" aria-label="Basic example">
            <button type="button" id="play1" class="btn btn-secondary"><div style="font-size:2em;"><i class="fas fa-play-circle"></i>/<i class="fas fa-pause-circle"></i></div></button>
          </div>
          <div class="btn-group" id="select2" style="display:none;" role="group" aria-label="Basic example">
            <button type="button" id="play2" class="btn btn-secondary"><div style="font-size:2em;"><i class="fas fa-play-circle"></i>/<i class="fas fa-pause-circle"></i></div></button>
          </div>
          <div class="btn-group" id="select3" style="display:none;" role="group" aria-label="Basic example">
            <button type="button" id="play3" class="btn btn-secondary"><div style="font-size:2em;"><i class="fas fa-play-circle"></i>/<i class="fas fa-pause-circle"></i></div></button>
          </div>
          <div class="btn-group" id="select4" style="display:none;" role="group" aria-label="Basic example">
            <button type="button" id="play4" class="btn btn-secondary"><div style="font-size:2em;"><i class="fas fa-play-circle"></i>/<i class="fas fa-pause-circle"></i></div></button>
          </div>
        </div><br>

        <form action="/third" method="post">
          <div class="row align-items-center justify-content-center">
            <button class="btn btn-default" id="fadeIn0" style="font-size:2em;" type="submit" name="drums" value="Drums/drum1.m4a">Select Drum 1</button>
            <button class="btn btn-default" id="fadeIn1" style="display:none;font-size:2em;" type="submit" name="drums" value="Drums/drum2.m4a">Select Drum 2</button>
            <button class="btn btn-default" id="fadeIn2" style="display:none;font-size:2em;" type="submit" name="drums" value="Drums/drum3.m4a">Select Drum 3</button>
            <button class="btn btn-default" id="fadeIn3" style="display:none;font-size:2em;" type="submit" name="drums" value="Drums/drum4.m4a">Select Drum 4</button>
            <button class="btn btn-default" id="fadeIn4" style="display:none;font-size:2em;" type="submit" name="drums" value="Drums/drum5.m4a">Select Drum 5</button>
          </div>
        </form>

    </div>

  </body>
  <script>
  $(function() {

    // Alphabet

    $('.coverflow').coverflow();

    $('#first').click(function() {
      $('.coverflow').coverflow('index', 0);
    });

    $('#last').click(function() {
      $('.coverflow').coverflow('index', -1);
    });

    $('#goto6').click(function() {
      $('.coverflow').coverflow('index', 6-1);	// zero-based index!
    });

    $('#keyboard').click(function() {
      $('.coverflow').coverflow('option', 'enableKeyboard', $(this).is(':checked'));
    });

    $('#wheel').click(function() {
      $('.coverflow').coverflow('option', 'enableWheel', $(this).is(':checked'));
    });

    $('#click').click(function() {
      $('.coverflow').coverflow('option', 'enableClick', $(this).is(':checked'));
    });

    /* CD covers */

    if ($.fn.reflect) {
      $('.photos .cover').reflect();
    }

    $('.photos').coverflow({
      easing:			'easeOutElastic',
      duration:		1000,
      index:			3,
      width:			320,
      height:			240,
      visible:		'density',
      selectedCss:	{	opacity: 1	},
      outerCss:		{	opacity: .1	},

      confirm:		function() {
        console.log('Confirm');
      },

      before:			function() {
        $('#photos-name').stop(true).fadeOut('fast');
      },

      select:			function(event, cover) {
        var img = $(cover).children().andSelf().filter('img').last();
        $('#photos-name').text(img.data('name') || 'unknown').stop(true).fadeIn('fast');
      },
    });

    $('#leakdetect').click(function() {
      $('#leakbucket').empty();
      for (var i = 0; i < 100; ++i) {
        $('<div><div>test</div></div>').appendTo('#leakbucket').coverflow();
      }
    });
  });
  </script>
</html>
