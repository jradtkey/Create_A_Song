<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <link rel="stylesheet" href="first.css">
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> -->
    <!-- jQuery/jQueryUI (hosted) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.js"></script>
    <!-- Optional: Reflection -->
		<script type="SwipeFlow/text/javascript" src="reflection.js"></script>

		<!-- interpolate, depends on jQ 1.8.0+ -->
		<script src="SwipeFlow/jquery.interpolate.min.js"></script>

		<!-- Coverflow -->
		<script src="SwipeFlow/jquery.coverflow.js"></script>
    <script src="scripts/keyboard.js"></script>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <audio id='key0' src="Keyboard/keyboard1.m4a" loop></audio>
    <audio id='key4' src="Keyboard/keyboard2.m4a" loop></audio>
    <audio id='key2' src="Keyboard/keyboard3.m4a" loop></audio>
    <audio id='key3' src="Keyboard/keyboard4.m4a" loop></audio>
    <audio id='key1' src="Keyboard/keyboard5.m4a" loop></audio>



    <h1 class="text-center" style="font-size: 7vw">Choose your keyboard track</h1>
    <div style="background-image: url('images/keyboard.jpg'); background-size:cover; height: 900px">
        <div class="coverflow">
            <div class="cover"><button class="btn btn-primary" id="button" style="background-image: url('images/keyboard1.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button" style="background-image: url('images/keyboard2.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button" style="background-image: url('images/keyboard3.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button" style="background-image: url('images/keyboard4.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button" style="background-image: url('images/keyboard5.png');"></button></div>
        </div>

        <div class="row align-items-center justify-content-center">
          <div class="btn-group" id="select0" role="group" aria-label="Basic example">

            <button type="button" id="play0" class="btn btn-secondary">Play/Pause</button>

          </div>
          <div class="btn-group" id="select1" style="display:none;" role="group" aria-label="Basic example">

            <button type="button" id="play1" class="btn btn-secondary">Play/Pause</button>

          </div>
          <div class="btn-group" id="select2" style="display:none;" role="group" aria-label="Basic example">

            <button type="button" id="play2" class="btn btn-secondary">Play/Pause</button>

          </div>
          <div class="btn-group" id="select3" style="display:none;" role="group" aria-label="Basic example">

            <button type="button" id="play3" class="btn btn-secondary">Play/Pause</button>

          </div>
          <div class="btn-group" id="select4" style="display:none;" role="group" aria-label="Basic example">

            <button type="button" id="play4" class="btn btn-secondary">Play/Pause</button>

          </div>
        </div><br>

        <form action="/final" method="post">
          <div class="row align-items-center justify-content-center">
            <button class="btn btn-default" id="fadeIn0" type="submit" name="keyboard" value="Keyboard/keyboard1.m4a">Descriptive Name For Bass 1</button>
            <button class="btn btn-default" id="fadeIn1" style="display:none;" type="submit" name="keyboard" value="Keyboard/keyboard2.m4a">Descriptive Name For Bass 2</button>
            <button class="btn btn-default" id="fadeIn2" style="display:none;" type="submit" name="keyboard" value="Keyboard/keyboard3.m4a">Descriptive Name For Bass 3</button>
            <button class="btn btn-default" id="fadeIn3" style="display:none;" type="submit" name="keyboard" value="Keyboard/keyboard4.m4a">Descriptive Name For Bass 4</button>
            <button class="btn btn-default" id="fadeIn4" style="display:none;" type="submit" name="keyboard" value="Keyboard/keyboard5.m4a">Descriptive Name For Bass 5</button>
          </div>
        </form>

    </div>

  </body>
  <script>
  $(function() {

    // Alphabet

    $('.coverflow').coverflow();

    $('#first').click(function() {
      $('.coverflow').coverflow('index', 0);
    });

    $('#last').click(function() {
      $('.coverflow').coverflow('index', -1);
    });

    $('#goto6').click(function() {
      $('.coverflow').coverflow('index', 6-1);	// zero-based index!
    });

    $('#keyboard').click(function() {
      $('.coverflow').coverflow('option', 'enableKeyboard', $(this).is(':checked'));
    });

    $('#wheel').click(function() {
      $('.coverflow').coverflow('option', 'enableWheel', $(this).is(':checked'));
    });

    $('#click').click(function() {
      $('.coverflow').coverflow('option', 'enableClick', $(this).is(':checked'));
    });

    /* CD covers */

    if ($.fn.reflect) {
      $('.photos .cover').reflect();
    }

    $('.photos').coverflow({
      easing:			'easeOutElastic',
      duration:		1000,
      index:			3,
      width:			320,
      height:			240,
      visible:		'density',
      selectedCss:	{	opacity: 1	},
      outerCss:		{	opacity: .1	},

      confirm:		function() {
        console.log('Confirm');
      },

      before:			function() {
        $('#photos-name').stop(true).fadeOut('fast');
      },

      select:			function(event, cover) {
        var img = $(cover).children().andSelf().filter('img').last();
        $('#photos-name').text(img.data('name') || 'unknown').stop(true).fadeIn('fast');
      },
    });

    $('#leakdetect').click(function() {
      $('#leakbucket').empty();
      for (var i = 0; i < 100; ++i) {
        $('<div><div>test</div></div>').appendTo('#leakbucket').coverflow();
      }
    });
  });
  </script>
</html>
