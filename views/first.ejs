<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <link rel="stylesheet" href="first.css">
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> -->
    <!-- jQuery/jQueryUI (hosted) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.js"></script>
    <!-- Optional: Reflection -->
		<script type="SwipeFlow/text/javascript" src="reflection.js"></script>

		<!-- interpolate, depends on jQ 1.8.0+ -->
		<script src="SwipeFlow/jquery.interpolate.min.js"></script>

		<!-- Coverflow -->
		<script src="SwipeFlow/jquery.coverflow.js"></script>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1 class="text-center" style="font-size: 7vw">Choose your bass track</h1>
    <div style="background-image: url('images/bass.jpg'); background-size:cover; height: 900px">
        <div class="coverflow">
            <div class="cover"><button class="btn btn-primary" id="button" style="background-image: url('images/bass1.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button" style="background-image: url('images/bass2.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button" style="background-image: url('images/bass3.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button" style="background-image: url('images/bass4.png');"></button></div>
            <div class="cover"><button class="btn btn-primary" id="button" style="background-image: url('images/bass5.png');"></button></div>
        </div>

      <form action="/second" method="post">
        <div class="row align-items-center justify-content-center">
          <button class="btn btn-default" id="fadeIn0" type="submit" name="bass" value="bass1">BUTTON 1</button>
          <button class="btn btn-default" id="fadeIn1" style="display:none;" type="submit" name="bass" value="bass2">Select 2</button>
          <button class="btn btn-default" id="fadeIn2" style="display:none;" type="submit" name="bass" value="bass3">Select 3</button>
          <button class="btn btn-default" id="fadeIn3" style="display:none;" type="submit" name="bass" value="bass4">Select 4</button>
          <button class="btn btn-default" id="fadeIn4" style="display:none;" type="submit" name="bass" value="bass5">Select 5</button>

            <!-- <button type="button" class="btn btn-secondary" id="fadeIn0">Left 1</button>
            <button type="button" class="btn btn-secondary" id="fadeIn0">Middle 1</button>
            <button type="button" class="btn btn-secondary" id="fadeIn0">Right 1</button>
            <button type="button" class="btn btn-secondary" id="fadeIn1" style="display:none;">Left 2</button>
            <button type="button" class="btn btn-secondary" id="fadeIn1" style="display:none;">Middle 2</button>
            <button type="button" class="btn btn-secondary" id="fadeIn1" style="display:none;">Right 2</button> -->


        </div><br>

        <div class="row align-items-center justify-content-center">
          <div class="btn-group btn btn-default" id="select0" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-secondary">|<< 1</button>
            <button type="button" class="btn btn-secondary">Play 1</button>
            <button type="button" class="btn btn-secondary">1 >>|</button>
          </div>
          <div class="btn-group" id="select1" style="display:none;" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-secondary">|<< 2</button>
            <button type="button" class="btn btn-secondary">Play 2</button>
            <button type="button" class="btn btn-secondary">2 >>|</button>
          </div>
          <div class="btn-group" id="select2" style="display:none;" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-secondary">|<< 3</button>
            <button type="button" class="btn btn-secondary">Play 3</button>
            <button type="button" class="btn btn-secondary">3 >>|</button>
          </div>
          <div class="btn-group" id="select3" style="display:none;" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-secondary">|<< 4</button>
            <button type="button" class="btn btn-secondary">Play 4</button>
            <button type="button" class="btn btn-secondary">4 >>|</button>
          </div>
          <div class="btn-group" id="select4" style="display:none;" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-secondary">|<< 4</button>
            <button type="button" class="btn btn-secondary">Play 4</button>
            <button type="button" class="btn btn-secondary">4 >>|</button>
          </div>
        </div>
      </form>

    </div>

  </body>
  <script>
  $(function() {

    // Alphabet

    $('.coverflow').coverflow();

    $('#first').click(function() {
      $('.coverflow').coverflow('index', 0);
    });

    $('#last').click(function() {
      $('.coverflow').coverflow('index', -1);
    });

    $('#goto6').click(function() {
      $('.coverflow').coverflow('index', 6-1);	// zero-based index!
    });

    $('#keyboard').click(function() {
      $('.coverflow').coverflow('option', 'enableKeyboard', $(this).is(':checked'));
    });

    $('#wheel').click(function() {
      $('.coverflow').coverflow('option', 'enableWheel', $(this).is(':checked'));
    });

    $('#click').click(function() {
      $('.coverflow').coverflow('option', 'enableClick', $(this).is(':checked'));
    });

    /* CD covers */

    if ($.fn.reflect) {
      $('.photos .cover').reflect();
    }

    $('.photos').coverflow({
      easing:			'easeOutElastic',
      duration:		1000,
      index:			3,
      width:			320,
      height:			240,
      visible:		'density',
      selectedCss:	{	opacity: 1	},
      outerCss:		{	opacity: .1	},

      confirm:		function() {
        console.log('Confirm');
      },

      before:			function() {
        $('#photos-name').stop(true).fadeOut('fast');
      },

      select:			function(event, cover) {
        var img = $(cover).children().andSelf().filter('img').last();
        $('#photos-name').text(img.data('name') || 'unknown').stop(true).fadeIn('fast');
      },
    });

    $('#leakdetect').click(function() {
      $('#leakbucket').empty();
      for (var i = 0; i < 100; ++i) {
        $('<div><div>test</div></div>').appendTo('#leakbucket').coverflow();
      }
    });
  });
  </script>
</html>
